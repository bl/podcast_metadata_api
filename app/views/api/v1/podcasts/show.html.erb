<h1>Podcast Upload Status</h1>

<section class="podcast_files">
  <%= render @podcast %>
</section>

<%= form_for @podcast, html: { class: 'podcast_file_submit' } do |podcast| %>
  <span class="btn btn-mini btn-success podcast-upload">
    <i class="glyphicon glyphicon-plus"></i>
    <span>Select Podcast File...</span>
  </span>
  <%= podcast.file_field :podcast_file, accept: 'audio/' %>
  <%= podcast.submit %>

  <!-- TODO: display upload status -->
  <div class="row">
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
        <span class="sr-only"></span>
      </div>
    </div>
  </div>
<% end %>
